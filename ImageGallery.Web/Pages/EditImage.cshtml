@page "{id:Guid}"
@model EditImageModel
@{
    ViewData["Title"] = "Edit Image";
}

<h2 class="leftMarginSmaller">Edit Image Title</h2>

<form method="post" class="form-horizontal" role="form">

    <div class="form-horizontal leftMarginDefault">

        <div class="form-group">
            <div>You image's title</div>
            <input asp-for="Edit.Title" class="form-control" />
        </div>

        <div class="form-group">
            <div>
                <input type="submit" class="btn btn-primary" value="Change title" />
            </div>
        </div>
    </div>
</form>
